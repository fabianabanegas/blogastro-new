--- 
import Layout from '../layouts/Layout.astro';
const cookies = Astro.cookies;
if (cookies.has("sb-access-token")) return Astro.redirect("/dashboard");
---
<Layout title="Sign In">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-emerald-900 to-teal-900 p-8">
    <form method="POST" action="/api/auth/signin" class="bg-white/10 backdrop-blur-xl p-10 rounded-3xl border border-white/20 w-full max-w-md space-y-6">
      <h1 class="text-4xl font-bold text-white text-center">Sign In</h1>
      <input name="email" type="email" placeholder="Email" required class="w-full p-4 rounded-xl bg-white/10 border border-white/20 text-white focus:ring-2 focus:ring-emerald-400" />
      <input name="password" type="password" placeholder="Password" required class="w-full p-4 rounded-xl bg-white/10 border border-white/20 text-white focus:ring-2 focus:ring-emerald-400" />
      <button type="submit" class="w-full bg-emerald-500 hover:bg-emerald-600 text-white p-4 rounded-xl font-bold text-lg shadow-lg">Sign In</button>
      <p class="text-center text-white/70">No account? <a href="/register" class="text-emerald-300 hover:text-emerald-200 font-semibold">Register</a></p>
    </form>
  </div>
</Layout>
