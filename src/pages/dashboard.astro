---
import Layout from '../layouts/Layout.astro';
const cookies = Astro.cookies;
if (!cookies.has("sb-access-token")) return Astro.redirect("/signin");

const userEmailCookie = cookies.get("user-email")?.value || 'gardener@example.com';
const displayName = userEmailCookie.split('@')[0] || userEmailCookie || 'Gardener'; 
---

<Layout title="Dashboard - Leaf by Leaf">
  <div class="min-h-screen bg-gradient-to-br from-emerald-900 via-green-800 to-teal-900">
    <!-- Header -->
    <header class="bg-white/10 backdrop-blur-xl border-b border-white/20">
      <div class="max-w-6xl mx-auto px-6 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div>
              <h1 class="text-3xl font-black bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent">
                Dashboard
              </h1>
              <p class="text-white/70 text-sm">Welcome back, {displayName}!</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-white/80 text-sm hidden md:block">Your plants are thriving</span>
            <div class="flex gap-3">
              <a href="/posts" class="bg-emerald-500/90 hover:bg-emerald-600 text-white px-6 py-3 rounded-2xl font-semibold shadow-lg hover:shadow-emerald-500/25 transition-all duration-300 text-sm">
                View Posts
              </a>
              <form action="/api/auth/logout" method="post" class="inline">
                <button class="bg-red-500/90 hover:bg-red-600 text-white px-6 py-3 rounded-2xl font-semibold shadow-lg hover:shadow-red-500/25 transition-all duration-300 text-sm">
                  Sign Out
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-12 lg:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2 space-y-6">

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 hover:bg-white/20 transition-all duration-300 group">
              <div class="flex items-center gap-4 mb-6">
                <div>
                  <p class="text-white/70 text-sm font-medium uppercase tracking-wide">Total Posts</p>
                  <p class="text-4xl font-black text-white">12</p>
                </div>
              </div>
              <a href="/posts#new-post" class="text-emerald-300 hover:text-emerald-200 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-all duration-200">Create New Post â†’</a>
            </div>
            
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 hover:bg-white/20 transition-all duration-300 group">
              <div class="flex items-center gap-4 mb-6">
                <div>
                  <p class="text-white/70 text-sm font-medium uppercase tracking-wide">Plants Saved</p>
                  <p class="text-4xl font-black text-white">47</p>
                </div>
              </div>
              <a href="/plants" class="text-emerald-300 hover:text-emerald-200 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-all duration-200">View Collection â†’</a>
            </div>

            <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 hover:bg-white/20 transition-all duration-300 group md:col-span-2">
              <div class="flex items-center gap-4 mb-6">
                <div>
                  <p class="text-white/70 text-sm font-medium uppercase tracking-wide">Plants Needing Attention</p>
                  <p class="text-4xl font-black text-white">3</p>
                </div>
              </div>
              <a href="/plants/needs-care" class="text-emerald-300 hover:text-emerald-200 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-all duration-200">Check Now â†’</a>
            </div>
          </div>
          
        </div>

        <div class="space-y-6">
          <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 sticky top-8 h-fit hover:bg-white/20 transition-all duration-300">
            <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
              <span></span> Quick Actions
            </h3>
            <div class="space-y-4">
              <a href="/posts/new" class="block p-5 bg-emerald-500/20 hover:bg-emerald-500/40 border border-emerald-500/40 text-emerald-100 rounded-2xl font-semibold text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-emerald-500/25 shadow-lg">
                New Post
              </a>
              <a href="/plants/add" class="block p-5 bg-teal-500/20 hover:bg-teal-500/40 border border-teal-500/40 text-teal-100 rounded-2xl font-semibold text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-teal-500/25 shadow-lg">
                Add Plant
              </a>
              <a href="/plants/needs-care" class="block p-5 bg-orange-500/20 hover:bg-orange-500/40 border border-orange-500/40 text-orange-100 rounded-2xl font-semibold text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-orange-500/25 shadow-lg">
                Needs Care
              </a>
              <!-- ðŸ‘‡ CAMBIADO: Ahora apunta a /account (pÃ¡gina de gestiÃ³n de cuentas) -->
              <a href="/account" class="block p-5 bg-purple-500/20 hover:bg-purple-500/40 border border-purple-500/40 text-purple-100 rounded-2xl font-semibold text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-purple-500/25 shadow-lg">
                Profile
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
